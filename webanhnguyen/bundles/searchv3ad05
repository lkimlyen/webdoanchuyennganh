var searchPage={masonry:null,items:6,items2:2,border2:2,items4:4,border4:4,masonryProducts:null,masonryAccessories:null,masonryNews:null,masonryOption:{columnWidth:".grid-sizer",itemSelector:".p-item",percentPosition:!0},init:function(){searchPage.masonryAccessories==null?searchPage.masonry=$(".accessories").packery(searchPage.masonryOption):!0;searchPage.masonryProducts==null?searchPage.masonry=$(".category-products").packery(searchPage.masonryOption):!0;searchPage.masonryNews==null?searchPage.masonry=$(".fshop-search-news").packery(searchPage.masonryOption):!0}},productItem={init:function(){productItem.controlClickItem()},controlClickItem:function(){$(document).on("click",".tablet .p-item,.mobile .p-item",function(){$(this).toggleClass("active")});$(".desktop .p-item").hover(function(){$(this).addClass("active")},function(){$(this).removeClass("active")});$(".tablet .p-item,.mobile .p-item").hover(function(){},function(){$(this).removeClass("active")})}};$(document).ready(function(){var n=new Swiper(".fshop-lpslnews-swiper",{spaceBetween:30,slidesPerView:1,centeredSlides:!0,autoplay:4e3,autoplayDisableOnInteraction:!1,direction:"vertical",loop:!0});searchPage.init();productItem.init()});$(document).on("click",".view-more-seach a",function(){var i=$(this),r=location.pathname.split("/")[2],u=location.pathname.split("/")[3],f=decodeURI(r),n=decodeURI(u).toLowerCase(),e=i.attr("data-page"),t,o;$(".p-item-more").attr({"class":"glyphicon glyphicon-refresh glyphicon-refresh-animate",style:"font-size: 80px"});t="";t=n.trim()=="tin-tuc"?'<li class="p-item cell-1 view-more-seach">'+$(".view-more-seach").html()+"<\/li>":'<div class="p-item cell-1 view-more-seach">'+$(".view-more-seach").html()+"<\/div>";n.trim()!="dien-dan"&&(o=$(".view-more-seach"),$(".view-more-seach").remove());i.attr("href")=="javascript:;"&&$.get("/Ajax/SearchLucene/ViewMoreV3",{searchTerm:f,pageindex:e,type:n},function(i){i.next&&n.trim()!="dien-dan"&&(i.content=i.content+t);var r=$(i.content);switch(n.trim()){case"san-pham":$("#category-products").append(r).packery("appended",r).packery("layout");i.next?($(".p-item-more").attr({"class":"icons p-more-icon",style:"font-size: 80px"}),$(".view-more-seach a").attr("data-page",i.page),$(".view-more-seach a strong").html(i.more)):$(".view-more-seach").remove();break;case"phu-kien":$("#accessories").append(r).packery("appended",r).packery("layout");i.next?($(".p-item-more").attr({"class":"icons p-more-icon",style:"font-size: 80px"}),$(".view-more-seach a").attr("data-page",i.page),$(".view-more-seach a strong").html(i.more)):$(".view-more-seach").remove();break;case"tin-tuc":$("#news").append(r).packery("appended",r).packery("layout");i.next?($(".p-item-more").attr({"class":"icons p-more-icon",style:"font-size: 80px"}),$(".view-more-seach a").attr("data-page",i.page),$(".view-more-seach a strong").html(i.more)):$(".view-more-seach").remove();break;case"dien-dan":i.next?($("#form ul").append(r),$(".view-more-seach a").attr("data-page",i.page),$(".view-more-seach a span").html(i.more)):$(".view-more-seach").remove();break;case"may-doi-tra":$("#oldproduct").append(r).packery("appended",r).packery("layout");i.next?($(".p-item-more").attr({"class":"icons p-more-icon",style:"font-size: 80px"}),$(".view-more-seach a").attr("data-page",i.page),$(".view-more-seach a strong").html(i.more)):$(".view-more-seach").remove();break;case"xa-hang":$("#discharge").append(r).packery("appended",r).packery("layout");i.next?($(".p-item-more").attr({"class":"icons p-more-icon",style:"font-size: 80px"}),$(".view-more-seach a").attr("data-page",i.page),$(".view-more-seach a strong").html(i.more)):$(".view-more-seach").remove()}searchPage.init();productItem.init()})})