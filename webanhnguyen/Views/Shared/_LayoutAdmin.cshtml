                                    <i class="fa fa-table"></i>
                                    <span class="sidebar-mini-hide">Thông tin shop</span>
                                </a>
                            </li>
                            <!-- information -->
                            <li>
                                <a href="@Url.Action("informationView","Information")">
                                    <i class="fa fa-book"></i>
                                    <span class="sidebar-mini-hide">Thông tin</span>
                                </a>
                            </li>
                            <!-- header -->
                            <li>
                                <a href="@Url.Action("headerEdit","Header")">
                                    <i class="fa fa-television"></i>
                                    <span class="sidebar-mini-hide">Header</span>
                                </a>
                            </li>
                                
                            <!-- produtcs category -->
                            <li>
                                <a href="#" class="nav-submenu" data-toggle="nav-submenu">
                                    <i class="si si-grid"></i>
                                    <span class="sidebar-mini-hide">Sản phẩm</span>
                                </a>
                                <ul>
                                    <li>
                                        @Html.ActionLink("Danh mục", "itemCategoryView", "ItemCategory")
                                    </li>
                                    <li>
                                        @Html.ActionLink("Hãng sản xuất", "producerView", "Producer")
                                    </li>
                                    <li>
                                        @Html.ActionLink("Danh sách sản phẩm", "itemView", "Item")
                                    </li>
                                </ul>
                            </li>
                            <!-- produtcs -->
                            <li>
                                <a href="@Url.Action("promotionView","Promotion")">
                                    <i class="fa fa-book"></i>
                                    <span class="sidebar-mini-hide">Khuyến mãi</span>
                                </a>
                            </li>
    
                        <li>
                                <a href="#" class="nav-submenu" data-toggle="nav-submenu">
                                    <i class="si si-grid"></i>
                                    <span class="sidebar-mini-hide">Tin tức</span>
                                </a>
                                <ul>
                                    <li>
                                        @Html.ActionLink("Danh mục", "newsCategoryView", "NewsCategory")
                                    </li>
                                    <li>
                                        @Html.ActionLink("Danh sách tin tức", "newsView", "News")
                                    </li>
                                </ul>
                            </li>
                               <!-- member -->
                            <li>
                                <a href="@Url.Action("MemberView","Member")">
                                    <i class="fa fa-smile-o"></i>
                                    <span class="sidebar-mini-hide">Khách hàng</span>
                                </a>
                            </li>
                            <!-- orders -->
                            <li>
