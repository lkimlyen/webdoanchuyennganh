                                    <span class="sidebar-mini-hide">Đơn hàng</span>
                                </a>
                            </li>
                            <!-- css -->
                            <li>
                                <a href="@Url.Action("cssEdit","Css")">
                                    <i class="fa fa-bell"></i>
                                    <span class="sidebar-mini-hide">Tùy chỉnh CSS</span>
                                </a>
                            </li>

                        </ul><!-- end .nav-main -->
                    </div><!-- end .side-content -->
                </div><!-- end .sidebar-content -->
            </div><!-- end #sidebar-scroll -->
        </nav><!-- end #sidebar -->
        <header id="header-navbar" class="content-mini content-mini-full">
            <ul class="nav-header pull-right">
                <li>
                    <div class="btn-group">
                        <button class="btn btn-default btn-image">
                            <img src="~/assets/Admin/images/no-avatar.png" alt="avatar" />
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-right">
                            <li class="dropdown-header">Tùy chọn</li>
                            <li>
                                @Html.ActionLink("Thoát", "Logout", "Admin")

                            </li>
                        </ul>
                    </div>
                </li>
            </ul>
            <ul class="nav-header pull-left">
                <li class="hidden-md hidden-lg">
                    <button class="btn btn-default" data-toggle="layout" data-action="sidebar_toggle" type="button">
                        <i class="fa fa-navicon"></i>
                    </button>
                </li>
                <li class="hidden-xs hidden-sm">
                    <button class="btn btn-default" data-toggle="layout" data-action="sidebar_mini_toggle" type="button">
                        <i class="fa fa-ellipsis-v"></i>
                    </button>
                </li>
                <li class="quick-login-website">
                    <button class="btn btn-info" onclick="window.open('@Url.Action("Index","Home")','_blank')">
                        Truy cập nhanh website
                        <i class="fa fa-external-link"></i>
                    </button>
                </li>
            </ul>
        </header><!-- end #header-navbar -->
        <main id="main-container" style="min-height: 663px;">
            @RenderBody()
        </main>
        <footer id="page-footer" class="content-mini content-mini-full font-s12 bg-gray-lighter clearfix">
            <div class="pull-right">

            </div>
            <div class="pull-left">
                Copyright &copy; 2016. <a href="">Web điện thoại</a>
            </div>
        </footer><!-- end #page-footer -->
