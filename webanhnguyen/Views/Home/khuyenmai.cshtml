@using PagedList.Mvc
@model List<webanhnguyen.Models.tbl_promotion>
@{
    Layout = "~/Views/Shared/_LayoutPromotion.cshtml";
}
<div id="main">
    <div class="container-fluid">
        <div class="input-group search-box-main">
            <input type="text" class="form-control mb-keyword" placeholder="Bạn muốn tìm gì?">
            <div class="asmr mb-asmr">
                <ul class="fshop-search-cate"></ul>
                <ul class="fshop-search-prod"></ul>
            </div>
            <span class="input-group-btn">
                <button class="btn btn-default search-button-btn" type="submit"><i class="glyphicon glyphicon-search"></i> </button>
            </span>
        </div>

        <div class="fshop-mainbox">

            <div class="row">
                <div class="fshop-breadcrumb">
                    <ol class="breadcrumb">
                        <li><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                        <li class="active"><a href="#">Khuyến mãi</a></li>
                    </ol>
                </div>
            </div>
            <div class="row kms-bannermain">
                <div class="swiper-container kms-bnermain-swiper">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide">
                            <a href="tin-tuc/Tin-khuyen-mai/bao-ve-may-tinh-cu-rinh-them-may-tinh-moi-voi-kaspersky-tai-fpt-shop-44642.html" title="Kaspersky S1" id="2907" class="banner_click">
                                <img src="~/cdn.fptshop.com.vn/Uploads/Originals/2016/10/5/636112840610538707_Kaspersky-S1.jpg" />
                            </a>

                        </div>
                        <div class="swiper-slide">
                            <a href="khuyen-mai/T10-2.html" title="Khuyến m&#227;i th&#225;ng S1" id="2910" class="banner_click">
                                <img src="~/cdn.fptshop.com.vn/Uploads/Originals/2016/10/5/636112830514308707_KMT10-S1.jpg" />
                            </a>

                        </div>
                        <div class="swiper-slide">
                            <a href="may-tinh-xach-tay/nhu-cau-su-dung/san-pham-2-trong-1.html" title="Intel 2 trong 1 S1" id="2923" class="banner_click">
                                <img src="~/cdn.fptshop.com.vn/Uploads/Originals/2016/9/19/636098753232128643_S1-1200x300.jpg" />
                            </a>

                        </div>
                        <div class="swiper-slide">
                            <a href="may-tinh-bang/samsung.html" title="Samsung Tab S1" id="3111" class="banner_click">
                                <img src="~/cdn.fptshop.com.vn/Uploads/Originals/2016/9/21/636100730943110015_tablet-ss-S1.jpg" />
                            </a>

                        </div>
                        <div class="swiper-slide">
                            <a href="lenovo-hang-dep-gia-tot.html" title="Lenovo S1" id="3143" class="banner_click">
                                <img src="~/cdn.fptshop.com.vn/Uploads/Originals/2016/10/3/636110800950420454_S1-1200x300.jpg" />
                            </a>

                        </div>
                        <div class="swiper-slide">
                            <a href="le-tung-bung-re-qua-chung.html" title="Halloween S1" id="3188" class="banner_click">
                                <img src="~/cdn.fptshop.com.vn/Uploads/Originals/2016/10/26/636130728964565553_Haloween-S1.jpg" />
                            </a>

                        </div>
                    </div>
                    <div class="swiper-button-prev kmt-sbutton-prev"></div>
                    <div class="swiper-button-next kmt-sbutton-next"></div>

                </div>
            </div>
            <div class="row kms-list-kmhot">
                <div class="kms-htitle clearfix">
                    <h3>Sản phẩm khuyến mại HOT</h3>
                </div>

                <div class="kms-list-kmhot">
                @foreach (var item in Model)
                {
                        <div class="kms-list-item col-md-3 col-sm-4 col-xs-6">
                        <a class="fnews-sankm-img" href="@Url.Action("PromotionDetail","Home",new {id = item.alias })" target="_blank">

                            <img class="kms-litem-img"  src="~/cdn.fptshop.com.vn/Uploads/Thumbs/@item.AnhBia" title="@item.Tenkhuyenmai">
                            <div class="kms-litem-info">
                                <p class="kms-litem-sale">@item.Tenkhuyenmai</p>
                            </div>
                        </a>
                    </div>
                }
                </div>
            </div>
            

               

                    </div>
</div> 
</div>
