@model IEnumerable<webanhnguyen.Models.tbl_Product>
@foreach (var its in Model)
{
    <div itemscope="" itemtype="http://schema.org/Product" style="display: none">
        <meta itemprop="sku" content="COM5CAN">
        <meta itemprop="name" content="@its.TenSP">
        <meta itemprop="description" content="@its.MoTaCT">
        <div itemprop="offers" itemscope="" itemtype="http://schema.org/Offer">
            <link itemprop="availability" href="http://schema.org/OutOfStock" rel="t">
            <meta itemprop="priceCurrency" content="VNĐ">
            <meta itemprop="price" content="@its.GiaHienTai">
        </div>
    </div>
    <div class="ty-column4">
          <div class="ty-grid-list__item ty-quick-view-button__wrapper">
                <div class="ty-grid-list__image">
                    <a href="@Url.Action("Details","Home",new { id=its.alias})">
                        <img class="ty-pict" src="~/@its.UrlHinh" style="height: 292px; width: 292px" alt="@its.TenSP" title="">
                    </a>
                    @if (@its.KhuyenMai > 0)
                    {
                        <ul class="ty-discount-label cm-reload-103000392" id="discount_label_update_103000392">
                            <li class="ty-discount-label__item" id="line_prc_discount_value_103000392"><span class="ty-discount-label__value" id="prc_discount_value_label_103000392">Giảm @its.KhuyenMai %</span></li>
                            <!--discount_label_update_103000392-->
                        </ul>
                    }
                    <div class="product-hover"><div class="product-shipping-free"><i class="fa fa-truck"></i> Miễn phí</div><a href="@Url.Action("Details","Home",new { id=its.alias})" class="product-view">Mua&nbsp;&nbsp;<i class="fa fa-arrow-circle-right"></i></a></div>
                </div><div class="ty-grid-list__item-name">
                    <a href="@Url.Action("Details","Home",new { id=its.alias})" class="product-title" title="@its.TenSP">@its.TenSP</a>
                </div><div class="ty-grid-list__price ">
                    <span class="cm-reload-103000392" id="old_price_update_103000392">
                        @if (@its.KhuyenMai > 0)
                        {
                            <span class="ty-list-price ty-nowrap" id="line_list_price_103000392"><span class="ty-strike"><span id="sec_list_price_103000392" class="ty-list-price ty-nowrap">@string.Format("{0:#,##0}",its.GiaCu)</span><span class="ty-list-price ty-nowrap"> đ</span></span></span>
                        }

                        <!--old_price_update_103000392-->
                    </span>
                    <span class="cm-reload-120000273 ty-price-update" id="price_update_120000273">
                        <span class="ty-price" id="line_discounted_price_120000273"><span id="sec_discounted_price_120000273" class="ty-price-num">@string.Format("{0:#,##0}",its.GiaHienTai)</span><span class="ty-price-num"> đ</span></span>

                        <!--price_update_120000273-->
                    </span>
                </div><div class="ty-grid-list__control"></div>
        </div>
    </div>
}
