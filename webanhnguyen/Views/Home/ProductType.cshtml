
@using PagedList.Mvc
@model PagedList.IPagedList<webanhnguyen.Models.tbl_Product>
@{
    ViewBag.Title = ViewBag.TenLoai;
    Layout = "~/Views/Shared/_LayoutProduct.cshtml";
}

<div class="fshop-cate-slides">
