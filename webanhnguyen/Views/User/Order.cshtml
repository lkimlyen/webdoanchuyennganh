@using PagedList.Mvc
@model PagedList.IPagedList<webanhnguyen.Models.Order>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="tygh-content clearfix">
    <div class="container-fluid  content-grid">
        <div class="row-fluid ">
            <div class="span16 breadcrumbs-grid">
                <div id="breadcrumbs_73">

                    <div class="ty-breadcrumbs clearfix">
                        <a href="@Url.Action("Index","Home")" class="ty-breadcrumbs__a">Trang chủ</a><span class="ty-breadcrumbs__slash">/</span><span class="ty-breadcrumbs__current">Đơn hàng</span>
                    </div>

                    <!--breadcrumbs_73-->
                </div>
            </div>
        </div><div class="row-fluid ">
            <div class="span16 main-content-grid">
                <div class="ty-mainbox-container clearfix">
                    <h1 class="ty-mainbox-title">

                        Đơn hàng


                    </h1>
                    <div class="ty-mainbox-body">

                        <div class="ty-section ty-search-form" id="ds_1705345364">
                              <div class="ty-pagination-container cm-pagination-container" id="pagination_contents">
<table class="ty-table ty-orders-search">
                                <thead>
                                    <tr style="text-align: center">
                                        <th style="text-align: center" ><a class="" href="" data-ca-target-id="pagination_contents">ID</a></th>
                                        <th style="text-align: center"><a class="" href="" data-ca-target-id="pagination_contents">Trạng thái</a></th>
                                        <th style="text-align: center"><a class="" href="" data-ca-target-id="pagination_contents">Tên người nhận</a></th>
                                        <th style="text-align: center"><a class="" href="" data-ca-target-id="pagination_contents">Địa chỉ</a></th>
                                        <th style="text-align: center"><a class="" href="" data-ca-target-id="pagination_contents">Số điện thoại</a></th>
                                        <th style="text-align: center"><a class="" href="" data-ca-target-id="pagination_contents">Email</a></th>
                                        <th style="text-align: center"><a class="" href="@Url.Action("Order","User", new {sorting = ViewBag.DateSortParm})" data-ca-target-id="pagination_contents">Ngày đặt</a><i class="ty-icon-up-dir"></i></th>
                                        <th style="text-align: center"><a class="" href="" data-ca-target-id="pagination_contents">Tổng cộng</a></th>
                                    </tr>
                                </thead>
                                @if (@Model.Count() == 0)
                                {
    <tr class="ty-table__no-items">
        <td colspan="7"><p class="ty-no-items">No orders found</p></td>
    </tr>}
                                else
                                {

                               foreach (var item in Model)
                                {
                                <tr>
                                    <td class="ty-orders-search__item"><a href="@Url.Action("OrderDetail", "User", new { id = item.id })"><strong>@item.id</strong></a></td>
                                    
                                        @if (item.status == true)
                                        {
                                            <td class="ty-orders-search__item">
                                                Đã thanh toán
                                                

                                            </td>
                                        }
                                        else
                                        {
                                            <td class="ty-orders-search__item">
                                                Chưa thanh toán
                                            </td>
                                        }
                                    <td class="ty-orders-search__item">
                                        <ul class="ty-orders-search__user-info">
                                            <li class="ty-orders-search__user-name">@item.tennguoinhan </li>
                                        </ul>
                                    </td>
                                    <td class="ty-orders-search__item">
                                        @item.diachi
                                    </td>
                                    <td class="ty-orders-search__item">
                                        @item.phonenumber
                                    </td>
                                    <td class="ty-orders-search__item">
                                        @item.gmail
                                    </td>
                                    <td class="ty-orders-search__item"><a href="@Url.Action("OrderDetail", "User", new { id = item.id })">@item.thoidiemdathang</a></td>




                                    <td class="ty-orders-search__item"><span>@item.price</span>&nbsp;đ</td>
                                </tr>}}
                            </table>


                          




                            <!--pagination_contents-->
                        </div>


                    </div>
                        @if (Model.PageCount > 1)
                        {
                            <div class="ty-pagination__bottom">
                                <div class="MenuTrang">
                                    @Html.PagedListPager(Model, page => Url.Action("Order", new { page = page }))

                                </div>
                                <style>
                                    .MenuTrang li {
                                        display: inline;
                                    }
                                </style>
                            </div>
                        }

                </div>
            </div>
        </div>
    </div>
</div>

