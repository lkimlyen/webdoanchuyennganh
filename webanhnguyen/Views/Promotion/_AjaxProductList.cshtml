@using PagedList.Mvc;
@model  PagedList.IPagedList<webanhnguyen.Models.tbl_Product>

<table class="table table-bordered table-hover btl-list-bbli bg-white">
    <thead>
        <tr>
            <td style="width: 1px;" class="text-center">
                <input type="checkbox" name="chk[]" class="tai_c" id="chkall" value="">
            </td>
            <td style="width: 50px;" class="text-center">ID</td>
            <td style="width: 150px;" class="text-center">Hình đại diện</td>
            <td class="text-center">Tên sản phẩm</td>
            <td style="width: 100px;">Số lượng</td>
            <td style="width: 100px;" class="text-center">Giá bán</td>
            <td style="width: 100px;" class="text-center">Khuyến mãi</td>
            <td style="width: 100px;" class="text-center">Giá khuyến mãi</td>
            <td style="width: 100px;" class="text-center">Quà tặng</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    <input type="checkbox" name="chk[]" class="tai_c" value="@item.ID">
                </td>
                <td class="text-center">
                    @item.ID
                </td>
                <td class="text-center">
                    @if (String.IsNullOrEmpty(item.UrlHinh))
                    {
                        <img src="~/assets/images/noimage.png" border="0" class="img-thumbnail" style="max-width: 50px;">
                    }
                    else
                    {
                        <img src="~/cdn.fptshop.com.vn/Uploads/Thumbs/@item.UrlHinh" border="0" class="img-thumbnail" style="max-width: 50px;">
                    }
                </td>
                <td class="text-center name-to-confirm">
                    @item.TenSP
                </td>
                <td class="text-center">
                    <input type="number" name="quantity" class="form-control" min="1" value="1" required="required">
                </td>

                <td class="text-center">
                    <input type="number" name="giaban" class="form-control" value="@item.GiaHienTai">
                </td>
                <td class="text-center">
                    <input type="number" name="khuyenmai" class="form-control" value="0">
                </td>
                <td class="text-center">
                    <input type="number" name="giakhuyenmai" class="form-control" value="0">
                </td>

                <td class="text-center">
                    <input type="text" name="gift" class="form-control" value="">
                </td>
            </tr>
        }
    </tbody>

</table>
<div style="margin-left: 20px;margin-top: -20px">
        @if (Model.PageCount > 1)
        {
            <div class="MenuTrang">
                @Html.PagedListPager(Model, page => Url.Action("promotionView", new { page = page }))

            </div>
                    <style>
                        .MenuTrang li {
                            display: inline;
                        }
                    </style>


        }

    </div>

</div>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>


